<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="1000"
        app:autoTransition="animateToEnd">
        <KeyFrameSet>
            <KeyAttribute
                android:id="@+id/ivPhoto"
                app:framePosition="25"
                app:motionTarget="@+id/ivPhoto"
                android:alpha="1"
                android:translationY="0dp" />
            <KeyAttribute
                android:id="@+id/tvName"
                app:framePosition="50"
                app:motionTarget="@+id/tvName"
                android:alpha="1"
                android:translationY="0dp" />
            <KeyAttribute
                android:id="@+id/tvPosition"
                app:framePosition="50"
                app:motionTarget="@+id/tvPosition"
                android:alpha="1"
                android:translationY="0dp" />
            <KeyAttribute
                android:id="@+id/cvBiography"
                app:framePosition="75"
                app:motionTarget="@+id/cvBiography"
                android:alpha="1"
                android:translationY="0dp" />
            <KeyAttribute
                android:id="@+id/tvEmail"
                app:framePosition="75"
                app:motionTarget="@+id/tvEmail"
                android:alpha="1"
                android:translationY="0dp" />
            <KeyAttribute
                android:id="@+id/tvPhone"
                app:framePosition="75"
                app:motionTarget="@+id/tvPhone"
                android:alpha="1"
                android:translationY="0dp" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/ivPhoto">
            <PropertySet android:alpha="0" />
            <Transform android:translationY="100dp" />
        </Constraint>
        <Constraint android:id="@+id/tvName">
            <PropertySet android:alpha="0" />
            <Transform android:translationY="50dp" />
        </Constraint>
        <Constraint android:id="@+id/tvPosition">
            <PropertySet android:alpha="0" />
            <Transform android:translationY="50dp" />
        </Constraint>
        <Constraint android:id="@+id/cvBiography">
            <PropertySet android:alpha="0" />
            <Transform android:translationY="100dp" />
        </Constraint>
        <Constraint android:id="@+id/tvEmail">
            <PropertySet android:alpha="0" />
            <Transform android:translationY="50dp" />
        </Constraint>
        <Constraint android:id="@+id/tvPhone">
            <PropertySet android:alpha="0" />
            <Transform android:translationY="50dp" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@+id/ivPhoto">
            <PropertySet android:alpha="1" />
            <Transform android:translationY="0dp" />
        </Constraint>
        <Constraint android:id="@+id/tvName">
            <PropertySet android:alpha="1" />
            <Transform android:translationY="0dp" />
        </Constraint>
        <Constraint android:id="@+id/tvPosition">
            <PropertySet android:alpha="1" />
            <Transform android:translationY="0dp" />
        </Constraint>
        <Constraint android:id="@+id/cvBiography">
            <PropertySet android:alpha="1" />
            <Transform android:translationY="0dp" />
        </Constraint>
        <Constraint android:id="@+id/tvEmail">
            <PropertySet android:alpha="1" />
            <Transform android:translationY="0dp" />
        </Constraint>
        <Constraint android:id="@+id/tvPhone">
            <PropertySet android:alpha="1" />
            <Transform android:translationY="0dp" />
        </Constraint>
    </ConstraintSet>



</MotionScene>